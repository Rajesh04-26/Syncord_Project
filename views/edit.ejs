<% layout("/layouts/boilerplate") -%>
<body>
    <h1>Edit Your Chat</h1>
    <p>Chat_ID : <b><%= chat._id %></b></p>
    <p>This chat was sent from <b><%= chat.from %></b> to <b><%= chat.to %></b>.
    </p>
    <form method="POST" action="/chats/<%= chat._id %>?_method=PUT">
        <textarea name="msg" rows="5" cols="50"><%= chat.message %></textarea>
        <button>edit</button>
    </form>
</body>
</html>